{
  "name": "ping-mem",
  "version": "1.0.0",
  "description": "Universal Memory Layer for AI Agents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ping-mem": "./dist/cli.js",
    "ping-mem-mcp": "./dist/mcp/cli.js",
    "ping-mem-http": "./dist/http/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js"
    },
    "./http": {
      "types": "./dist/http/index.d.ts",
      "import": "./dist/http/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "bun run build || true",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "start": "bun run dist/http/index.js",
    "start:sse": "PING_MEM_TRANSPORT=sse bun run dist/http/index.js",
    "start:rest": "PING_MEM_TRANSPORT=rest bun run dist/http/index.js",
    "start:mcp": "bun run dist/mcp/cli.js",
    "setup": "bash scripts/setup.sh",
    "setup:docker": "docker compose up -d",
    "setup:docker-only": "bash scripts/setup.sh --docker-only",
    "health": "curl -sf http://localhost:6333/health && curl -sf http://localhost:7474 && curl -sf http://localhost:3000/health && echo 'All services healthy'",
    "diagnostics:tsc-sarif": "bun run src/diagnostics/tsc-sarif.ts",
    "diagnostics:eslint-sarif": "bun run src/diagnostics/eslint-sarif.ts",
    "diagnostics:prettier-sarif": "bun run src/diagnostics/prettier-sarif.ts",
    "diagnostics:collect": "bun run src/cli.ts collect"
  },
  "keywords": [
    "ai",
    "memory",
    "mcp",
    "agents",
    "vector-search",
    "knowledge-graph",
    "event-sourcing"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@qdrant/js-client-rest": "^1.16.2",
    "neo4j-driver": "^5.28.3",
    "openai": "^6.16.0",
    "sqlite-vec": "^0.1.7-alpha.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "bun-types": "^1.2.5"
  }
}

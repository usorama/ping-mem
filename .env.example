# ping-mem Environment Variables

# Server Configuration
PING_MEM_HOST=0.0.0.0
PING_MEM_PORT=3000
PING_MEM_TRANSPORT=sse
PING_MEM_API_KEY=
PING_MEM_DB_PATH=/data/ping-mem.db
PING_MEM_DIAGNOSTICS_DB_PATH=/data/ping-mem-diagnostics.db
PING_MEM_ADMIN_DB_PATH=/data/ping-mem-admin.db
PING_MEM_SECRET_KEY=
PING_MEM_ADMIN_USER=
PING_MEM_ADMIN_PASS=

# Neo4j Configuration
NEO4J_URI=bolt://ping-mem-neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here

# Qdrant Configuration
QDRANT_URL=http://ping-mem-qdrant:6333
QDRANT_COLLECTION_NAME=ping-mem-vectors

# Memory Storage (SQLite)
# PING_MEM_DB_PATH above is the primary SQLite store

# Session Configuration
PING_MEM_SESSION_TTL=86400
PING_MEM_MAX_SESSIONS=1000

# Memory Configuration
PING_MEM_MAX_MEMORY_SIZE=10000
PING_MEM_ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Node Environment
NODE_ENV=production

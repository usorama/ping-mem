        "PING_MEM_DIAGNOSTICS_DB_PATH": "/Users/umasankr/.ping-mem/diagnostics.db",
        "PING_MEM_ADMIN_DB_PATH": "/Users/umasankr/.ping-mem/admin.db"
      }
    }
  }
